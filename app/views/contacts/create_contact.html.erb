<h1>Enter a New Contact:</h1>
<%= form_tag '/create_contact_result', method: :post do %>
  <div class = "form-group">
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name, nil, class: "form-control", placeholder: 'Enter first name here!' %>
  </div>
  <div class = "form-group">
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name, nil, class: "form-control", placeholder: 'Enter last name here!' %>
  </div>
  <div class = "form-group">
    <%= label_tag :email %>
    <%= text_field_tag :email, nil, class: "form-control", placeholder: 'Enter e-mail address here!' %>
  </div>
  <div class = "form-group">
    <%= label_tag :phone %>
    <%= text_field_tag :phone, nil, class: "form-control", placeholder: 'Enter phone number here!' %>
  </div>
  <div>
    <%= button_tag 'Create', class: "btn btn-default" %>
  </div>
  <% end %>